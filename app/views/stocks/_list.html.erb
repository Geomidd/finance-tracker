<% if tracked_stocks && !tracked_stocks.empty? %>
  <table class="table table-bordered table-hover ">
    <thead>
      <tr>
        <th scope="col">Ticker</th>
        <th scope="col">Name</th>
        <th scope="col">Price</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      <%= render partial: "stocks/row", collection: tracked_stocks, as: :stock %>
    </tbody>
  </table>
<% else %>
  <h3>You are not currently tracking any stocks. Please add one to view data.</h3>
<% end %>
