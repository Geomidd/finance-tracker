<tr>
  <th scope="row"><%= friend.email %></td>
  <td><%= friend.full_name %></th>
  <td>
    <%= link_to "View profile", user_path(friend), class: "btn btn-sm btn-primary" %>
    <%= button_to "Stop following", friendship_path(friend), method: :delete, form: {data: {turbo_confirm: "Are you sure?"}, class: "form-inline"}, class: "btn btn-sm btn-warning" %>
  </td>
</tr>
